{
  "name": "yttria",
  "version": "1.0.0",
  "description": "Yttria programming language using LLVM bindings in TypeScript.",
  "main": "index.js",
  "scripts": {
    "daemon": "npx nodemon",
    "quick": "ts-node src/yttria.ts",
    "build": "npm run clean && tsc",
    "clean": "rimraf ./build && rimraf ./dist",
    "install-modules": "npm i",
    "pack": "npm run build && pkg -t node18-linux-x64,node18-macos-x64,node18-win-x64,node18-alpine-x64 --out-path ./dist ./build/yttria.js",
    "yttria": "node ./build/yttria.js"
  },
  "keywords": [],
  "author": "nthnn",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.4.10",
    "colors": "^1.4.0",
    "crypto": "^1.0.1",
    "llvm-bindings": "^0.4.2",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@types/yargs": "^17.0.24",
    "yargs": "^17.7.2"
  }
}

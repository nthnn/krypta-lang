{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6"],
    "module": "CommonJS",
    "rootDir": "./core",
    "sourceMap": false,
    "outDir": "./build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
     "core/**/*.ts"
  ]
}
